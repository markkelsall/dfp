<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
		controllerName="application.viewWorkOrder" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showNavButton="true" title="Work Order - ({currentWorkOrder>/workOrderType}) {currentWorkOrder>/workOrderNumber}" navButtonPress="onBackPress">
		<content>
			<ObjectHeader
			  title="{currentWorkOrder>/shortText}"
			  number="({currentWorkOrder>/workOrderType}) {currentWorkOrder>/workOrderNumber}">
			  <attributes>
					<ObjectAttribute text="Work Centre: {currentWorkOrder>/workCentre}"/>
					<ObjectAttribute text="Company Code: {currentWorkOrder>/companyCode}"/>
					<ObjectAttribute text="{currentWorkOrder>/longText}"/>
			  </attributes>
				<statuses>
					<ObjectStatus text="Plant: {currentWorkOrder>/plant}" state="None"/>
					<ObjectStatus text="Equipment: {currentWorkOrder>/equimentText} ({currentWorkOrder>/equipment})" state="None"/>
					<ObjectStatus text="Functional Location: {currentWorkOrder>/functionalLocationText} ({currentWorkOrder>/functionalLocation})" state="None"/>
    		</statuses>
			</ObjectHeader>
			<layout:Grid hSpacing="1">
				<layout:content>
					<layout:Grid hSpacing="1">
						<layout:content>
							<Label text="Input 1" class="inputLabel">
								<layoutData>
									<layout:GridData span="L2 M4 S12"/>
								</layoutData>
							</Label>
							<Select selectedKey="{example>/inputOneSelectedKey}" items="{example>/inputOneData}" width="100%">
								<layoutData>
									<layout:GridData span="L4 M8 S12"/>
								</layoutData>
								<core:Item key="{example>id}" text="{example>text}"/>
							</Select>

							<Label text="Input 2" class="inputLabel">
								<layoutData>
									<layout:GridData span="L2 M4 S12"/>
								</layoutData>
							</Label>
							<Select selectedKey="{example>/inputTwoSelectedKey}" items="{example>/inputTwoData}" width="100%">
								<layoutData>
									<layout:GridData span="L4 M8 S12"/>
								</layoutData>
								<core:Item key="{example>id}" text="{example>text}"/>
							</Select>

							<Label text="Input 3" class="inputLabel">
								<layoutData>
									<layout:GridData span="L2 M4 S12"/>
								</layoutData>
							</Label>
							<Select selectedKey="{example>/inputThreeSelectedKey}" items="{example>/inputThreeData}" width="100%">
								<layoutData>
									<layout:GridData span="L4 M8 S12"/>
								</layoutData>
								<core:Item key="{example>id}" text="{example>text}"/>
							</Select>

							<Label text="Input 4" class="inputLabel">
								<layoutData>
									<layout:GridData span="L2 M4 S12"/>
								</layoutData>
							</Label>
							<Input placeholder="input four" value="{example>/inputFour}">
								<layoutData>
									<layout:GridData span="L2 M4 S6"/>
								</layoutData>
							</Input>
							<Select selectedKey="{example>/inputFourSelect}" items="{example>/inputFourData}" width="100%">
								<layoutData>
									<layout:GridData span="L2 M4 S6"/>
								</layoutData>
								<core:Item key="{example>id}" text="{example>text}"/>
							</Select>
				</layout:content>
			</layout:Grid>
			<Panel>
				<headerToolbar>
          <Toolbar height="3rem">
            <Text text="Operations"/>
          </Toolbar>
				</headerToolbar>
				<content>
					<List items="{currentWorkOrder>/operations}" noDataText="No operations" select="onOperationItemPress" mode="SingleSelectMaster">
	          <items>
	            <ObjectListItem title="{currentWorkOrder>operationId}" number="{currentWorkOrder>duration} {currentWorkOrder>unit}">
								<attributes>
        					<ObjectAttribute text="{currentWorkOrder>workCentre}"/>
									<ObjectAttribute text="{currentWorkOrder>dateString}"/>
        				</attributes>
	            </ObjectListItem>
	          </items>
	        </List>
				</content>
			</Panel>
    </content>
		<footer>
      <Toolbar>
				<ToolbarSpacer/>
        <Button text="Add time" press="onAddConfirmTimePress" type="Emphasized"/>
        <Button text="Save" press="onSaveWorkOrderPress"/>
				<Button text="Technically Complete" press="onTechnicallyCompleteWorkOrderPress" type="Accept"/>
      </Toolbar>
    </footer>
	</Page>
</core:View>
