<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="application.viewWorkOrder" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showNavButton="true" title="Work Order - {currentWorkOrder>/workOrderNumber}" navButtonPress="onBackPress">
		<content>
			<ObjectHeader
			  title="{currentWorkOrder>/shortText}"
			  number="{currentWorkOrder>/workOrderNumber}">
			  <attributes>
					<ObjectAttribute text="Work Centre: {currentWorkOrder>/workCentre}"/>
					<ObjectAttribute text="Company Code: {currentWorkOrder>/companyCode}"/>
					<ObjectAttribute text="{currentWorkOrder>/longText}"/>
			  </attributes>
				<statuses>
      		<ObjectStatus text="Plant: {currentWorkOrder>/plant}" state="None"/>
    		</statuses>
			</ObjectHeader>
			<HBox>
        <items>
					<Label text="Object Part" class="inputLabel"/>
					<Select selectedKey="{currentWorkOrder>/objectPart}" items="{objectParts>/data}" class="selectElements">
          	<core:Item key="{objectParts>id}" text="{objectParts>text}"/>
        	</Select>
					<Label text="Cause code" class="inputLabel"/>
					<Select selectedKey="{currentWorkOrder>/causeCode}" items="{causeCodes>/data}" class="selectElements">
          	<core:Item key="{causeCodes>id}" text="{causeCodes>text}"/>
        	</Select>
				</items>
			</HBox>
			<HBox>
        <items>
					<Label text="Damage" class="inputLabel"/>
					<Select selectedKey="{currentWorkOrder>/damage}" items="{damage>/data}" class="selectElements">
          	<core:Item key="{damage>id}" text="{damage>text}"/>
        	</Select>
					<Label text="Breakdown duration" class="inputLabel"/>
					<Input placeholder="time" class="inputElement" value="{currentWorkOrder>/breakdownDuration}"/>
					<Select selectedKey="{currentWorkOrder>/breakdownDurationUnit}" items="{units>/data}" class="unitsSelect">
          	<core:Item key="{units>id}" text="{units>text}"/>
        	</Select>
				</items>
			</HBox>
			<Panel>
				<headerToolbar>
          <Toolbar height="3rem">
            <Text text="Confirmed time"/>
          </Toolbar>
				</headerToolbar>
				<content>
					<List items="{currentWorkOrder>/confirmedTime}" noDataText="No confirmed time">
	          <items>
	            <ObjectListItem title="{currentWorkOrder>workCentre}" number="{currentWorkOrder>duration} {currentWorkOrder>unit}">
								<attributes>
        					<ObjectAttribute text="{currentWorkOrder>date}"/>
        				</attributes>
	            </ObjectListItem>
	          </items>
	        </List>
				</content>
			</Panel>
    </content>
		<footer>
      <Toolbar>
				<ToolbarSpacer/>
        <Button text="Add time" press="onAddConfirmTimePress" type="Emphasized"/>
        <Button text="Save" press="onSaveWorkOrderPress"/>
				<Button text="Technically Complete" press="onTechnicallyCompleteWorkOrderPress" type="Accept"/>
      </Toolbar>
    </footer>
	</Page>
</core:View>
